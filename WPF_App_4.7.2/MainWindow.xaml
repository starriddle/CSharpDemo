<Window x:Class="WPF_App_4._7._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App_4._7._2"
        mc:Ignorable="d"
        Title="WPF App (.NET Framework 4.7.2)" Height="450" Width="600">
	<Grid>
		<Label x:Name="TipLebal" Content="Your Name Please:" Margin="0,50,0,0" Width="380" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="16"/>
		<Label x:Name="MsgLebal" Content="" Margin="0,300,0,0" Width="550" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
		<TextBox x:Name="NameTextBox" TextWrapping="Wrap" Width="300" Height="40" Margin="0,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16"/>
		<Button x:Name="SubmitButton" Content="O K" Margin="0,175,0,0" Width="120" Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" Click="Button_Click"/>

	</Grid>
</Window>
