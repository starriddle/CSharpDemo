<Window x:Class="WPF_App_8._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App_8._0"
        mc:Ignorable="d"
        Title="WPF App (.NET 8.0)" Height="400" Width="600">
	<Grid>
		<Label x:Name="TipLebal" Content="Your Name Please:" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="200" Height="40" HorizontalContentAlignment="Center" FontSize="16"/>
		<Label x:Name="MsgLebal" Content="" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="20" Height="40" VerticalContentAlignment="Center" Width="350"/>
		<TextBox x:Name="NameTextBox" HorizontalAlignment="Center" Margin="0,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="16" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
		<Button x:Name="SubmitButton" Content="O K" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Width="120" Height="40" FontSize="16" Click="SubmitButton_Click"/>

	</Grid>
</Window>
